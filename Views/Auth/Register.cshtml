@{
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
    ViewData["Title"] = "Registro";
}

@model TiendaOnline.ViewModels.Usuario.RegisterViewModel

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="row rounded-5 p-3 shadow box-area">

        <!-- Left box -->
        <div class="col-md-6 rounded-4 d-flex justify-content-center align-items-center flex-column left-box">
            <div class="featured-image mb-3">
                <img src="https://t3.ftcdn.net/jpg/03/34/79/68/360_F_334796865_VVTjg49nbLgQPG6rgKDjVqSb5XUhBVsW.jpg" class="img-fluid" />
            </div>
            <p class="fs-2 p-page-font">Be Verified</p>
            <small class="text-wrap text-center small-page-font">Join experience</small>
        </div>

        <!-- Right box -->
        <div class="col-md-6 d-flex flex-column justify-content-between">

            <div class="header-text">
                <p>Create Account</p>
                <p>Start your journey with us</p>
            </div>

            <form asp-action="Register" method="post">
                <div class="form-group mb-3">
                    <input asp-for="Nombre" class="form-control form-control-lg fs-6" placeholder="Name" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <input asp-for="Email" class="form-control form-control-lg fs-6" placeholder="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group mb-3 position-relative">
                    <input asp-for="Password" class="form-control form-control-lg fs-6 pe-5" placeholder="Password" id="passwordInput" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <span class="bi bi-eye toggle-password" id="togglePassword" style="position: absolute; top: 50%; right: 15px; transform: translateY(-50%); cursor: pointer;"></span>
                </div>

                <div class="form-group mb-3 position-relative">
                    <input asp-for="ConfirmPassword" class="form-control form-control-lg fs-6 pe-5" placeholder="Confirm Password" id="confirmPasswordInput" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    <span class="bi bi-eye toggle-password" id="toggleConfirmPassword" style="position: absolute; top: 50%; right: 15px; transform: translateY(-50%); cursor: pointer;"></span>
                </div>

                <div class="input-group mb-3">
                    <button type="submit" class="btn btn-dark btn-lg w-100">Register</button>
                </div>
                <div class="row mb-3">
                    <small><a asp-action="Login">Already have an account? Login</a></small>
                </div>
            </form>
        </div>
    </div>
</div>
